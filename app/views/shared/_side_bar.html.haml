.side-bar 
  .header-top
    %ul.user
      %li.user__name
        = current_user.name
      %li.user__btn
        = link_to new_group_path do
          = icon('fas', 'pen-square', class: 'user__btn')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'user__btn')
  
  .side-content
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group. show_last_message